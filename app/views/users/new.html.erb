    <div class="col-md-6">
      <%= text_field_tag :bust_size, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create User", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
