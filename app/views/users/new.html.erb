<div class="page-header">
  <h1>New User</h1>
</div>

<%= form_tag(users_url, method: 'post', class: 'form-horizontal') do %>

  <div class="form-group">
    <%= label_tag :first_name, nil, class: 'col-md-2 control-label' %>

    <div class="col-md-6">
      <%= text_field_tag :first_name, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :second_name, nil, class: 'col-md-2 control-label' %>

    <div class="col-md-6">
      <%= text_field_tag :second_name, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :date_of_birth, nil, class: 'col-md-2 control-label' %>

    <div class="col-md-6">
      <%= text_field_tag :date_of_birth, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
