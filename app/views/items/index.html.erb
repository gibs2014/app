<div class="page-header">
  <h1>Items</h1>
</div>

<p><%= link_to 'Add a New Item', new_item_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image url</th>
      <th>Name</th>
      <th>Category</th>
      <th>Colour</th>
      <th>Brand</th>
      <th>Price</th>
      <th>Flattering for</th>
      <th>Extra support</th>
      <th>General size</th>
      <th>Us size</th>
      <th>Uk size</th>
      <th>Eu size</th>
      <th>Waist size</th>
      <th>Hip size</th>
      <th>Bust size</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @items.each do |item| %>
    <tr>
        <td><img width="100" src="<%= item.image_url %>"></td>
        <td><%= item.name %></td>
        <td><%= item.category %></td>
        <td><%= item.colour %></td>
        <td><%= item.brand %></td>
        <td><%= item.price %></td>
        <td><%= item.flattering_for %></td>
        <td><%= item.extra_support %></td>
        <td><%= item.general_size %></td>
        <td><%= item.us_size %></td>
        <td><%= item.uk_size %></td>
        <td><%= item.eu_size %></td>
        <td><%= item.waist_size %></td>
        <td><%= item.hip_size %></td>
        <td><%= item.bust_size %></td>

      <td><%= link_to '<i class="icon-zoom-in"></i>'.html_safe, item_url(item), class: 'btn btn-primary' %></td>
      <td><%= link_to '<i class="icon-edit"></i>'.html_safe, edit_item_url(item), class: 'btn btn-warning' %></td>
      <td><%= link_to '<i class="icon-trash"></i>'.html_safe, item_url(item), method: 'delete', data: { confirm: "Do you really want to delete this item?" }, class: 'btn btn-danger' %></td>

    </tr>
  <% end %>
  </tbody>
</table>

