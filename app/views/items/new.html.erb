<div class="page-header">
  <h1>New Item</h1>
</div>

<%= form_tag(items_url, method: 'post', class: 'form-horizontal') do %>

  <div class="form-group">
    <%= label_tag :name, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :name, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :category, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :category, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :colour, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :colour, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :brand, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :brand, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :price, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-2">
      <%= number_field_tag :price, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :flattering_for, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :flattering_for, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :extra_support, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= check_box_tag :extra_support?, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :image_url, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :image_url, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :general_size, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :general_size, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :us_size, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :us_size, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :uk_size, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :uk_size, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :eu_size, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :eu_size, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :waist_size, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :waist_size, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :hip_size, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :hip_size, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :bust_size, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :bust_size, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Item", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
